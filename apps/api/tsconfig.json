{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "noImplicitAny": true,
    "skipLibCheck": true, // drizzle-orm
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "drizzle"],
  "include": ["src/**/*", "drizzle.config.ts"]
}
